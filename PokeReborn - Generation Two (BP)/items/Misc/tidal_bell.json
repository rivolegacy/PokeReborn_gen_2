{
   "format_version":"1.16.100",
   "minecraft:item":{
      "description":{
         "identifier":"reborn:tidal_bell",
         "category":"equipment"
      },
      "components":{
         "minecraft:creative_category":{
            "parent":"itemGroup.name.arrow"
         },
         "minecraft:max_stack_size":1,
         "minecraft:display_name":{
            "value":"Tidal Bell (Summons Lugia)"
         },
         "minecraft:icon":{
            "texture":"tidal_bell"
         },
         "minecraft:on_use":{
            "on_use":{
               "event":"use",
               "target":"self"
            }
         },
         "minecraft:render_offsets":{
            "main_hand":{
               "first_person":{
                  "scale":[
                     0.02,
                     0.02,
                     0.02
                  ]
               },
               "third_person":{
                  "scale":[
                     0.05,
                     0.05,
                     0.05
                  ]
               }
            }
         }
      },
      "events":{
         "use":{
            "sequence":[
               {
                  "condition":"query.is_in_water",
                  "run_command":{
                     "command":[
                        "execute @s ~ ~ ~ title @s actionbar You Summoned Lugia!",
                        "replaceitem entity @s slot.weapon.mainhand 0 air",
                        "summon reborn:lugia ~ ~ ~ reborn:from_wild"
                     ]
                  }
               }
            ]
         }
      }
   }
}