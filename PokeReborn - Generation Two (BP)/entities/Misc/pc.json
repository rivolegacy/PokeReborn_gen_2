{
   "format_version":"1.16.0",
   "minecraft:entity":{
      "description":{
         "identifier":"reborn:pc",
         "is_spawnable":true,
         "is_summonable":true,
         "is_experimental":false
      },
      "component_groups":{
         "reborn:default":{
            "minecraft:tameable":{
               "probability":1,
               "tame_items":"reborn:pokeball",
               "tame_event":{
                  "event":"minecraft:on_tame",
                  "target":"self"
               }
            }
         },
         "reborn:tamed":{
            "minecraft:is_tamed":{
               
            },
            "minecraft:inventory":{
               "container_type":"minecart_chest",
               "inventory_size":28,
               "restrict_to_owner":true
            },
            "minecraft:interact":{
               "interactions":[
                  {
                     "on_interact":{
                        "filters":{
                           "all_of":[
                              {
                                 "test":"is_owner",
                                 "subject":"other",
                                 "operator":"equals",
                                 "value":true
                              },
                              {
                                 "test":"has_equipment",
                                 "domain":"hand",
                                 "subject":"other",
                                 "value":"reborn:team_mystic"
                              }
                           ]
                        },
                        "event":"reborn:collect",
                        "target":"self"
                     },
                     "use_item":false,
                     "play_sounds":"saddle"
                  },
                  {
                     "on_interact":{
                        "filters":{
                           "all_of":[
                              {
                                 "test":"is_owner",
                                 "subject":"other",
                                 "operator":"equals",
                                 "value":true
                              },
                              {
                                 "test":"has_equipment",
                                 "domain":"hand",
                                 "subject":"other",
                                 "value":"reborn:team_instinct"
                              }
                           ]
                        },
                        "event":"reborn:collect",
                        "target":"self"
                     },
                     "use_item":false,
                     "play_sounds":"saddle"
                  },
                  {
                     "on_interact":{
                        "filters":{
                           "all_of":[
                              {
                                 "test":"is_owner",
                                 "subject":"other",
                                 "operator":"equals",
                                 "value":true
                              },
                              {
                                 "test":"has_equipment",
                                 "domain":"hand",
                                 "subject":"other",
                                 "value":"reborn:team_valor"
                              }
                           ]
                        },
                        "event":"reborn:collect",
                        "target":"self"
                     },
                     "use_item":false,
                     "play_sounds":"saddle"
                  }
               ]
            }
         },
         "reborn:despawn":{
            "minecraft:transformation":{
               "into":"reborn:despawn",
               "drop_inventory":true
            }
         }
      },
      "components":{
         "minecraft:type_family":{
            "family":[
               "pc"
            ]
         },
         "minecraft:scale":{
            "value":1.3
         },
         "minecraft:breathable":{
            "totalSupply":15,
            "suffocateTime":0
         },
         "minecraft:collision_box":{
            "width":1,
            "height":1
         },
         "minecraft:health":{
            "value":{
               "range_min":500,
               "range_max":500
            }
         },
         "minecraft:physics":{
            
         },
         "minecraft:pushable":{
            "is_pushable":false,
            "is_pushable_by_piston":true
         }
      },
      "events":{
         "minecraft:entity_spawned":{
            "add":{
               "component_groups":[
                  "reborn:default"
               ]
            }
         },
         "minecraft:on_tame":{
            "add":{
               "component_groups":[
                  "reborn:tamed"
               ]
            },
            "remove":{
               "component_groups":[
                  "reborn:default"
               ]
            }
         },
         "reborn:collect":{
            "add":{
               "component_groups":[
                  "reborn:despawn"
               ]
            },
            "run_command":{
               "command":[
                  "give @p reborn:pc_spawn_egg"
               ]
            }
         }
      }
   }
}