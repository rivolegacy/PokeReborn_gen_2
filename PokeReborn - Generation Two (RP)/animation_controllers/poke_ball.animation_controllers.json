{
   "format_version":"1.10.0",
   "animation_controllers":{
      "controller.animation.poke_ball":{
         "initial_state":"default",
         "states":{
            "default":{
               "animations":[
                  "chill",
                  "look_at_target"
               ],
               "transitions":[
                  {
                     "move":"query.modified_move_speed"
                  },
                  {
                     "sitting":"query.is_sitting"
                  }
               ]
            },
            "move":{
               "animations":[
                  "chill",
                  "look_at_target",
                  {
                     "walk":"query.modified_move_speed"
                  }
               ],
               "transitions":[
                  {
                     "sitting":"query.is_sitting"
                  }
               ]
            },
            "sitting":{
               "animations":[
                  "sit",
                  "look_at_target",
                  {
                     "walk":"query.modified_move_speed"
                  }
               ],
               "transitions":[
                  {
                     "default":"!query.is_sitting"
                  }
               ]
            }
         }
      }
   }
}